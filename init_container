apiVersion: apps/v1
kind: Deployment
metadata: #deployment
  name: myapachedeploy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: apache
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: apache
    spec:
      volumes:
        - name: ed
          emptyDir: {}
      initContainers:
        - name: busybox
          image: busybox
          command:
            - sh
            - -c
            - echo "<html><body>Hello Robert!</body></html>"
          volumeMounts:
            - name: ed
              mountPath: /tmp
      containers:
        - name: apachecontainer #container
          image: httpd
          volumeMounts:
            - name: ed
              mountPath: /usr/local/apache2/htdocs/
          resources:
            limits:
              memory: "128Mi"
              cpu: "500m"
          ports:
            - containerPort: 80
